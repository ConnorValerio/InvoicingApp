<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Java.Controllers.AddProductController">
   <children>
      <StackPane alignment="BOTTOM_CENTER" prefHeight="81.0" prefWidth="360.0" style="-fx-background-color: #003a96;">
         <children>
            <Label style="-fx-text-fill: #FFFFFF; -fx-font-size: 18pt; -fx-font-family: &quot;Aclonica Font&quot;;" text="Add Product">
               <font>
                  <Font name="Bell MT Bold" size="18.0" />
               </font>
               <StackPane.margin>
                  <Insets bottom="20.0" />
               </StackPane.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </StackPane>
      <GridPane alignment="CENTER" vgap="8.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" percentWidth="40.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="-Infinity" percentWidth="50.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <VBox.margin>
            <Insets bottom="15.0" right="40.0" top="15.0" />
         </VBox.margin>
         <children>
            <TextField fx:id="productNameField" maxWidth="-Infinity" minWidth="200.0" prefWidth="200.0" promptText="e.g. IPad" GridPane.columnIndex="1" />
            <VBox alignment="CENTER_RIGHT" prefWidth="124.0">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets right="20.0" />
               </padding>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Product Name" />
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="1">
               <padding>
                  <Insets right="20.0" />
               </padding>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description" />
               </children>
            </VBox>
            <TextArea fx:id="productDescriptionField" prefHeight="200.0" prefWidth="200.0" promptText="e.g. Cool, shiny IPad!" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2" />
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
               <padding>
                  <Insets right="20.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets right="20.0" />
               </GridPane.margin>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price (Â£)" />
               </children>
            </VBox>
            <TextField fx:id="productPriceField" maxWidth="-Infinity" minWidth="200.0" prefWidth="200.0" promptText="e.g. 250.00" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </GridPane>
      <HBox alignment="BOTTOM_RIGHT" maxHeight="-Infinity" prefHeight="60.0" spacing="10.0">
         <children>
            <Button fx:id="cancelButton" minWidth="100.0" mnemonicParsing="false" onAction="#cancel" prefWidth="100.0" text="Cancel" />
            <Button fx:id="submitButton" layoutX="10.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#submit" prefWidth="100.0" text="Submit" />
         </children>
         <padding>
            <Insets bottom="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
